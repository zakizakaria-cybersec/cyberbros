---
import { getCollection } from "astro:content";

// Get featured blog posts (limit to 2 for homepage)
const allPosts = await getCollection("blog");
const featuredPosts = allPosts
  .filter(post => post.data.featured)
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 2);
---

<section id="blog" class="bg-gray-900 py-20">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Latest <span class="text-indigo-500">Insights</span>
      </h2>
      <p class="text-gray-400 text-lg max-w-2xl mx-auto">
        Stay updated with the latest security trends, techniques, and best practices
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      <!-- Featured Blog Posts -->
      {featuredPosts.map(post => (
        <article class="bg-gray-800/50 border border-gray-700 rounded-lg overflow-hidden hover:border-indigo-500 transition-all duration-300 hover:shadow-lg hover:shadow-indigo-500/20">
          <a href={`/blog/${post.slug}`} class="block">
            <div class="p-6">
              <div class="flex flex-wrap gap-2 mb-4">
                {post.data.tags.slice(0, 2).map(tag => (
                  <span class="px-2 py-1 bg-indigo-600/20 text-indigo-400 text-xs rounded-full border border-indigo-600/30">
                    #{tag}
                  </span>
                ))}
              </div>
              
              <h3 class="text-2xl font-bold text-white mb-3 hover:text-indigo-400 transition">
                {post.data.title}
              </h3>
              
              <p class="text-gray-400 mb-4">
                {post.data.description}
              </p>
              
              <div class="flex items-center justify-between text-sm text-gray-500">
                <time datetime={post.data.publishDate.toISOString()}>
                  {post.data.publishDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                </time>
                <span>{post.data.readTime}</span>
              </div>
            </div>
            
            <div class="px-6 pb-6">
              <span class="inline-flex items-center gap-2 text-indigo-400 hover:text-indigo-300 transition">
                Read more
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </span>
            </div>
          </a>
        </article>
      ))}

      <!-- Placeholder Post (Coming Soon) -->
      <article class="bg-gray-800/30 border border-gray-700/50 rounded-lg overflow-hidden opacity-60">
        <div class="p-6">
          <div class="flex gap-2 mb-4">
            <span class="px-2 py-1 bg-gray-700 text-gray-500 text-xs rounded-full">
              Coming Soon
            </span>
          </div>
          
          <h3 class="text-xl font-bold text-gray-500 mb-3">
            More Security Insights Coming Soon
          </h3>
          
          <p class="text-gray-600 mb-4">
            Stay tuned for more in-depth articles on penetration testing, vulnerability research, and security best practices.
          </p>
        </div>
      </article>
    </div>

    <div class="text-center">
      <a href="/blog" class="inline-flex items-center gap-2 bg-indigo-600 text-white px-6 py-3 rounded-md hover:bg-indigo-500 transition">
        View All Posts
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<section id="specialties" class="relative py-24 px-6 bg-black overflow-hidden">
  <!-- Animated gradient background -->
  <div class="absolute inset-0 bg-gradient-to-br from-indigo-950/30 via-purple-950/20 to-black"></div>
  
  <!-- Grid overlay -->
  <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
  
  <!-- Glowing orbs -->
  <div class="absolute top-0 left-1/3 w-96 h-96 bg-indigo-500/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 right-1/3 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl"></div>
  
  <div class="relative max-w-6xl mx-auto z-10">
    <div class="text-center mb-16">
      <!-- Section badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 mb-6 rounded-full bg-gradient-to-r from-indigo-500/10 to-purple-500/10 border border-indigo-500/20 backdrop-blur-sm">
        <span class="text-sm font-medium text-indigo-300">Our Expertise</span>
      </div>
      
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        <span class="bg-gradient-to-r from-white via-indigo-200 to-purple-200 bg-clip-text text-transparent">
          Our Specialized Security Expertise
        </span>
      </h2>
      <p class="text-gray-300 text-lg mb-3 max-w-3xl mx-auto">We focus on niche areas where most cybersecurity trainers lack expertise</p>
      <p class="text-indigo-400 font-semibold max-w-3xl mx-auto">Unlike typical web-focused training, we specialize in systems that are harder to assess and where talent is scarce</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Embedded Device Security -->
      <div class="relative group bg-gradient-to-br from-gray-900/80 to-gray-950/80 p-6 rounded-xl border border-indigo-500/50 hover:border-indigo-400 backdrop-blur-sm transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-indigo-500/30">
        <div class="absolute -top-3 -right-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg">
          OUR SPECIALTY
        </div>
        <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        <div class="relative">
          <div class="w-12 h-12 bg-gradient-to-br from-indigo-600/40 to-purple-600/40 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-7 h-7 text-indigo-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">Embedded Device Security</h3>
          <p class="text-indigo-300 text-sm font-semibold mb-1">IoT, hardware, firmware analysis</p>
          <p class="text-gray-400 text-sm">Future-proof skills for the growing embedded device market</p>
        </div>
      </div>

      <!-- Mobile Application Security -->
      <div class="relative group bg-gradient-to-br from-gray-900/80 to-gray-950/80 p-6 rounded-xl border border-indigo-500/50 hover:border-indigo-400 backdrop-blur-sm transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-indigo-500/30">
        <div class="absolute -top-3 -right-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg">
          OUR SPECIALTY
        </div>
        <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        <div class="relative">
          <div class="w-12 h-12 bg-gradient-to-br from-indigo-600/40 to-purple-600/40 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-7 h-7 text-indigo-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">Mobile App Security</h3>
          <p class="text-indigo-300 text-sm font-semibold mb-1">Android/iOS, banking apps, API testing</p>
          <p class="text-gray-400 text-sm">In-demand skills for mobile-first organizations</p>
        </div>
      </div>

      <!-- Thick Client Security -->
      <div class="relative group bg-gradient-to-br from-gray-900/80 to-gray-950/80 p-6 rounded-xl border border-indigo-500/50 hover:border-indigo-400 backdrop-blur-sm transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-indigo-500/30">
        <div class="absolute -top-3 -right-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg">
          OUR SPECIALTY
        </div>
        <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        <div class="relative">
          <div class="w-12 h-12 bg-gradient-to-br from-indigo-600/40 to-purple-600/40 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-7 h-7 text-indigo-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">Thick Client Security</h3>
          <p class="text-indigo-300 text-sm font-semibold mb-1">Windows desktop apps, .NET, legacy systems</p>
          <p class="text-gray-400 text-sm">Most pentesters can't handle thick clientsâ€”we teach what others don't</p>
        </div>
      </div>

      <!-- AI Security -->
      <div class="relative group bg-gradient-to-br from-gray-900/60 to-gray-950/60 p-6 rounded-xl border border-gray-700/50 hover:border-indigo-500/50 backdrop-blur-sm transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-indigo-900/30">
        <div class="absolute -top-3 -right-3 bg-gradient-to-r from-yellow-500 to-orange-500 text-black text-xs font-bold px-3 py-1 rounded-full shadow-lg">
          TRENDING
        </div>
        <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        <div class="relative">
          <div class="w-12 h-12 bg-gradient-to-br from-indigo-600/30 to-purple-600/30 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-7 h-7 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">AI Security</h3>
          <p class="text-indigo-300 text-sm font-semibold mb-1">Most in-demand security skill in 2024</p>
          <p class="text-gray-400 text-sm">LLM security, prompt injection, AI model vulnerabilities, and ML system testing</p>
        </div>
      </div>

      <!-- API & Web Services Security -->
      <div class="relative group bg-gradient-to-br from-gray-900/60 to-gray-950/60 p-6 rounded-xl border border-gray-700/50 hover:border-indigo-500/50 backdrop-blur-sm transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-indigo-900/30">
        <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        <div class="relative">
          <div class="w-12 h-12 bg-gradient-to-br from-indigo-600/30 to-purple-600/30 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-7 h-7 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">API & Web Services Security</h3>
          <p class="text-gray-400 text-sm">REST, GraphQL, microservices, and modern web application testing</p>
        </div>
      </div>

      <!-- Secure Coding & Code Review -->
      <div class="relative group bg-gradient-to-br from-gray-900/60 to-gray-950/60 p-6 rounded-xl border border-gray-700/50 hover:border-indigo-500/50 backdrop-blur-sm transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-indigo-900/30">
        <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        <div class="relative">
          <div class="w-12 h-12 bg-gradient-to-br from-indigo-600/30 to-purple-600/30 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-7 h-7 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">Secure Coding & Code Review</h3>
          <p class="text-gray-400 text-sm">Security-focused code audits and secure development practices</p>
        </div>
      </div>

      <!-- Cloud & Infrastructure Security -->
      <div class="relative group bg-gradient-to-br from-gray-900/60 to-gray-950/60 p-6 rounded-xl border border-gray-700/50 hover:border-indigo-500/50 backdrop-blur-sm transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-indigo-900/30">
        <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        <div class="relative">
          <div class="w-12 h-12 bg-gradient-to-br from-indigo-600/30 to-purple-600/30 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-7 h-7 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">Cloud & Infrastructure Security</h3>
          <p class="text-gray-400 text-sm">AWS, Azure, containerization, and modern infrastructure assessments</p>
        </div>
      </div>

      <!-- Call to Action Card -->
      <div class="relative group bg-gradient-to-br from-indigo-600 to-purple-600 p-6 rounded-xl border border-indigo-400/50 hover:shadow-2xl hover:shadow-indigo-500/50 transition-all duration-300 hover:scale-105 flex flex-col justify-center overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-purple-600 to-pink-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        <div class="relative">
          <h3 class="text-xl font-semibold text-white mb-2">Need Specialized Security Expertise?</h3>
          <p class="text-indigo-100 text-sm mb-4">Let's discuss how our specialized skills can address your security challenges</p>
          <a href="#contact" class="inline-flex items-center text-white font-semibold hover:text-indigo-100 transition">
            Get in Touch
            <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .bg-grid-pattern {
    background-image: 
      linear-gradient(to right, rgba(255, 255, 255, 0.1) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
    background-size: 40px 40px;
  }

  @keyframes pulse-glow {
    0%, 100% {
      box-shadow: 0 0 20px rgba(239, 68, 68, 0.3);
    }
    50% {
      box-shadow: 0 0 40px rgba(239, 68, 68, 0.6), 0 0 60px rgba(239, 68, 68, 0.4);
    }
  }

  .animate-pulse-glow {
    animation: pulse-glow 3s ease-in-out infinite;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }

  .animate-bounce {
    animation: bounce 2s infinite;
  }
</style>

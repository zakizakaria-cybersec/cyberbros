<footer class="bg-gray-900 text-gray-300">
  <div class="container-custom py-12">
    <div class="grid md:grid-cols-2 lg:grid-cols-5 gap-8 mb-8">
      <!-- Brand -->
      <div class="lg:col-span-2">
        <a href="/" class="text-2xl font-display font-bold text-white mb-4 block">
          CyberBros
        </a>
        <p class="text-gray-400 mb-4 max-w-sm">
          Professional cybersecurity services protecting businesses from modern threats. 
          Your trusted partner in digital security.
        </p>
        <div class="flex gap-4">
          {socialLinks.map((social) => (
            <a 
              href={social.href}
              class="text-2xl hover:scale-110 transition-transform duration-200"
              aria-label={social.name}
            >
              {social.icon}
            </a>
          ))}
        </div>
      </div>
      
      <!-- Services -->
      <div>
        <h3 class="font-display font-bold text-white mb-4">Services</h3>
        <ul class="space-y-2">
          {footerLinks.services.map((link) => (
            <li>
              <a href={link.href} class="hover:text-primary-400 transition-colors">
                {link.name}

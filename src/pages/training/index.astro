---
import MainLayout from "../../layouts/MainLayout.astro";
import Navigation from "../../components/Navigation.astro";
import Footer from "../../components/Footer.astro";
import Contact from "../../components/Contact.astro";
import { getCollection } from "astro:content";

export const prerender = true;

// Get all training courses and sort by publish date (newest first)
const allCourses = await getCollection("training");
const courses = allCourses.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

// Separate courses by category
const featuredCourses = courses.filter(course => course.data.featured);
const specialtyCourses = courses.filter(course => course.data.category === 'specialty');
const trendingCourses = courses.filter(course => course.data.category === 'trending');
const standardCourses = courses.filter(course => course.data.category === 'standard');
---

<MainLayout 
  title="Cybersecurity Training Courses | Expert-Led Security Training | CyberBros"
  description="Browse our comprehensive cybersecurity training courses. Specialized training in AI security, embedded systems, mobile security, and more. Expert-led courses with hands-on labs for professionals in Malaysia."
  keywords="cybersecurity training courses, security training programs, AI security training, embedded systems security, mobile security course, penetration testing training, security certifications Malaysia"
  canonicalURL={new URL('/training', Astro.site).href}
>
  <Navigation />
  
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-gray-900 via-indigo-950 to-black text-white py-24 px-6 overflow-hidden">
    <!-- Animated background elements -->
    <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
    <div class="absolute top-0 right-0 w-96 h-96 bg-indigo-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl"></div>
    
    <div class="relative max-w-5xl mx-auto text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        <span class="bg-gradient-to-r from-white via-indigo-200 to-purple-200 bg-clip-text text-transparent">
          Cybersecurity Training Courses
        </span>
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-gray-300 max-w-3xl mx-auto">
        Expert-led training programs designed to elevate your cybersecurity skills. From foundational courses to advanced specializations.
      </p>
      <div class="flex flex-wrap gap-4 justify-center">
        <a href="#featured" class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold px-8 py-4 rounded-md hover:from-indigo-500 hover:to-purple-500 transition transform hover:scale-105">
          View Featured Courses
        </a>
        <a href="/cybersecurity-training-malaysia" class="border border-indigo-500 px-8 py-4 rounded-md hover:bg-indigo-950/50 hover:border-indigo-400 transition">
          Training Overview
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Courses -->
  {featuredCourses.length > 0 && (
    <section id="featured" class="py-20 px-6 bg-black">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Featured Training Courses
          </h2>
          <p class="text-gray-400 text-lg">
            Most popular and in-demand cybersecurity training programs
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuredCourses.map(course => (
            <a href={`/training/${course.slug}`} class="group bg-gradient-to-br from-indigo-900/30 to-purple-900/30 p-8 rounded-xl border-2 border-indigo-500/50 hover:border-indigo-400 transition-all duration-300 hover:shadow-xl hover:shadow-indigo-500/20 transform hover:-translate-y-1">
              {course.data.badge && (
                <div class="inline-flex items-center gap-2 px-3 py-1 mb-4 rounded-full border bg-gradient-to-r from-yellow-500/20 to-orange-500/20 border-yellow-500/30">
                  <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  <span class="text-sm font-medium text-yellow-300">{course.data.badge}</span>
                </div>
              )}
              
              <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-indigo-300 transition">
                {course.data.title}
              </h3>
              <p class="text-gray-400 mb-4 line-clamp-3">
                {course.data.description}
              </p>
              
              <div class="flex items-center justify-between text-sm text-gray-400 mb-4">
                <span class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  {course.data.duration}
                </span>
                <span class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  {course.data.handsOnPercentage}% Hands-On
                </span>
              </div>

              <span class="inline-flex items-center gap-2 text-indigo-400 group-hover:text-indigo-300 transition font-semibold">
                View Course Details
                <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </span>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Specialty Courses -->
  {specialtyCourses.length > 0 && (
    <section class="py-20 px-6 bg-gray-950">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Specialty Training Programs
          </h2>
          <p class="text-gray-400 text-lg">
            Advanced courses for specialized security domains
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {specialtyCourses.map(course => (
            <a href={`/training/${course.slug}`} class="group bg-gradient-to-br from-gray-900 to-gray-950 p-8 rounded-xl border border-indigo-500/30 hover:border-indigo-500/50 transition-all duration-300 hover:shadow-xl hover:shadow-indigo-500/10">
              {course.data.badge && (
                <div class="inline-flex items-center gap-2 px-3 py-1 mb-4 rounded-full border bg-gradient-to-r from-indigo-500/20 to-purple-500/20 border-indigo-500/30">
                  <span class="text-sm font-medium text-indigo-300">{course.data.badge}</span>
                </div>
              )}
              
              <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-indigo-400 transition">
                {course.data.title}
              </h3>
              <p class="text-gray-400 mb-4 line-clamp-3">
                {course.data.description}
              </p>
              
              <div class="flex items-center justify-between text-sm text-gray-400 mb-4">
                <span class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  {course.data.duration}
                </span>
                <span class="text-indigo-400 font-semibold">{course.data.level}</span>
              </div>

              <span class="inline-flex items-center gap-2 text-indigo-400 group-hover:text-indigo-300 transition">
                Learn More
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </span>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Trending Courses -->
  {trendingCourses.length > 0 && (
    <section class="py-20 px-6 bg-black">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Trending Now
          </h2>
          <p class="text-gray-400 text-lg">
            Most sought-after security training in the current landscape
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {trendingCourses.map(course => (
            <a href={`/training/${course.slug}`} class="group bg-gradient-to-br from-gray-900 to-gray-950 p-8 rounded-xl border border-gray-800 hover:border-indigo-500/50 transition-all duration-300">
              {course.data.badge && (
                <div class="inline-flex items-center gap-2 px-3 py-1 mb-4 rounded-full border bg-gradient-to-r from-indigo-500/20 to-purple-500/20 border-indigo-500/30">
                  <span class="text-sm font-medium text-indigo-300">{course.data.badge}</span>
                </div>
              )}
              
              <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-indigo-400 transition">
                {course.data.title}
              </h3>
              <p class="text-gray-400 mb-4 line-clamp-3">
                {course.data.description}
              </p>
              
              <div class="flex items-center justify-between text-sm text-gray-400 mb-4">
                <span class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  {course.data.duration}
                </span>
                <span class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  {course.data.handsOnPercentage}% Hands-On
                </span>
              </div>

              <span class="inline-flex items-center gap-2 text-indigo-400 group-hover:text-indigo-300 transition">
                Learn More
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </span>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- All Other Courses -->
  {standardCourses.length > 0 && (
    <section class="py-20 px-6 bg-gray-950">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            All Training Courses
          </h2>
          <p class="text-gray-400 text-lg">
            Complete catalog of our cybersecurity training programs
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {standardCourses.map(course => (
            <a href={`/training/${course.slug}`} class="group bg-gradient-to-br from-gray-900 to-gray-950 p-8 rounded-xl border border-gray-800 hover:border-indigo-500/50 transition-all duration-300">
              <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-indigo-400 transition">
                {course.data.title}
              </h3>
              <p class="text-gray-400 mb-4 line-clamp-3">
                {course.data.description}
              </p>
              
              <div class="flex items-center justify-between text-sm text-gray-400 mb-4">
                <span class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  {course.data.duration}
                </span>
                <span class="text-indigo-400 font-semibold">{course.data.level}</span>
              </div>

              <span class="inline-flex items-center gap-2 text-indigo-400 group-hover:text-indigo-300 transition">
                View Details
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </span>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="py-20 px-6 bg-black">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Ready to Enhance Your Cybersecurity Skills?
      </h2>
      <p class="text-xl text-gray-300 mb-8">
        Join thousands of security professionals who have trained with CyberBros. All courses can be customized for your organization's needs.
      </p>
      <div class="flex flex-wrap gap-4 justify-center">
        <a href="#contact" class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold px-10 py-4 rounded-md hover:from-indigo-500 hover:to-purple-500 transition transform hover:scale-105">
          Request Training Quote
        </a>
        <a href="/cybersecurity-training-malaysia" class="border border-indigo-500 px-10 py-4 rounded-md hover:bg-indigo-950/50 hover:border-indigo-400 transition">
          Learn About Our Approach
        </a>
      </div>
    </div>
  </section>

  <Contact />
  <Footer />
</MainLayout>

<style>
  .bg-grid-pattern {
    background-image: 
      linear-gradient(to right, rgba(255, 255, 255, 0.1) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
    background-size: 40px 40px;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

---
import { getCollection } from "astro:content";
import type { GetStaticPaths } from "astro";
import MainLayout from "../../layouts/MainLayout.astro";
import Navigation from "../../components/Navigation.astro";
import Footer from "../../components/Footer.astro";
import Contact from "../../components/Contact.astro";

export const prerender = true;

export const getStaticPaths = (async () => {
  const trainingCourses = await getCollection("training");
  return trainingCourses.map((course) => ({
    params: { slug: course.slug },
    props: { course },
  }));
}) satisfies GetStaticPaths;

const { course } = Astro.props;
const { Content } = await course.render();

// Generate structured data for SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Course",
  "name": course.data.title,
  "description": course.data.description,
  "provider": {
    "@type": "Organization",
    "name": "CyberBros Security",
    "sameAs": "https://cyberbros.com"
  },
  "educationalLevel": course.data.level,
  "timeRequired": course.data.duration,
  "coursePrerequisites": course.data.prerequisites,
  "offers": {
    "@type": "Offer",
    "price": course.data.price,
    "priceCurrency": "MYR"
  }
};
---

<MainLayout 
  title={`${course.data.title} | CyberBros Malaysia`}
  description={course.data.description}
  keywords={course.data.keywords}
  canonicalURL={new URL(`/training/${course.slug}`, Astro.site).href}
>
  <!-- Structured Data -->
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(structuredData)} />

  <Navigation />
  
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-gray-900 via-indigo-950 to-black text-white py-24 px-6 overflow-hidden">
    <!-- Animated background elements -->
    <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
    <div class="absolute top-0 right-0 w-96 h-96 bg-indigo-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl"></div>
    
    <div class="relative max-w-4xl mx-auto">
      <!-- Badge -->
      {course.data.badge && (
        <div class={`inline-flex items-center gap-2 px-4 py-2 mb-6 rounded-full border ${
          course.data.category === 'trending' 
            ? 'bg-gradient-to-r from-yellow-500/20 to-orange-500/20 border-yellow-500/30' 
            : 'bg-gradient-to-r from-indigo-500/20 to-purple-500/20 border-indigo-500/30'
        }`}>
          <svg class={`w-4 h-4 ${course.data.category === 'trending' ? 'text-yellow-400' : 'text-indigo-400'}`} fill="currentColor" viewBox="0 0 20 20">
            {course.data.category === 'trending' ? (
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            ) : (
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
            )}
          </svg>
          <span class={`text-sm font-medium ${course.data.category === 'trending' ? 'text-yellow-300' : 'text-indigo-300'}`}>
            {course.data.badge}
          </span>
        </div>
      )}
      
      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        <span class="bg-gradient-to-r from-white via-indigo-200 to-purple-200 bg-clip-text text-transparent">
          {course.data.title}
        </span>
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-gray-300">
        {course.data.description.split('.')[0]}.
      </p>
      <div class="flex flex-wrap gap-4">
        <a href="#modules" class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold px-8 py-4 rounded-md hover:from-indigo-500 hover:to-purple-500 transition transform hover:scale-105">
          View Training Modules
        </a>
        <a href="#contact" class="border border-indigo-500 px-8 py-4 rounded-md hover:bg-indigo-950/50 hover:border-indigo-400 transition">
          Enquire Now
        </a>
      </div>
    </div>
  </section>

  <!-- Learning Objectives -->
  <section class="py-20 px-6 bg-gray-950">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          What You'll Master
        </h2>
        <p class="text-gray-400 text-lg">
          Practical skills to excel in this specialized security domain
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        {course.data.objectives.map((objective) => (
          <div class="flex gap-4">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </div>
            </div>
            <div>
              <p class="text-gray-300">{objective}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Training Modules -->
  <section id="modules" class="py-20 px-6 bg-black">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Training Modules
        </h2>
        <p class="text-gray-400 text-lg">
          Comprehensive curriculum covering the full spectrum
        </p>
      </div>

      <div class="space-y-6">
        {course.data.modules.map((module, index) => (
          <div class="bg-gradient-to-br from-gray-900 to-gray-950 p-8 rounded-xl border border-indigo-500/30 hover:border-indigo-500/50 transition">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-lg flex items-center justify-center text-white font-bold text-xl">
                {String(index + 1).padStart(2, '0')}
              </div>
              <div class="flex-1">
                <h3 class="text-2xl font-semibold text-white mb-3">{module.title}</h3>
                <p class="text-gray-400 mb-4">
                  {module.description}
                </p>
                <div class="flex flex-wrap gap-2">
                  {module.topics.map((topic) => (
                    <span class="px-3 py-1 bg-indigo-600/20 text-indigo-300 text-sm rounded-full">{topic}</span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Who Should Attend -->
  <section class="py-20 px-6 bg-gray-950">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Who Should Attend
        </h2>
        <p class="text-gray-400 text-lg">
          This training is designed for professionals looking to specialize
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {course.data.audience.map((person) => {
          const [title, ...descParts] = person.split(' - ');
          const description = descParts.join(' - ');
          
          return (
            <div class="bg-gradient-to-br from-gray-900 to-gray-950 p-6 rounded-xl border border-gray-800">
              <div class="w-12 h-12 bg-indigo-600/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-white mb-2">{title}</h3>
              {description && <p class="text-gray-400">{description}</p>}
            </div>
          );
        })}
      </div>

      <div class="mt-12 bg-gradient-to-r from-indigo-900/30 to-purple-900/30 border border-indigo-500/30 rounded-xl p-8 text-center">
        <h3 class="text-2xl font-bold text-white mb-3">Prerequisites</h3>
        <p class="text-gray-300">
          {course.data.prerequisites}
        </p>
      </div>
    </div>
  </section>

  <!-- Training Format -->
  <section class="py-20 px-6 bg-black">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Training Format
        </h2>
        <p class="text-gray-400 text-lg">
          Hands-on, practical learning with real-world scenarios
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        <div class="bg-gradient-to-br from-gray-900 to-gray-950 p-8 rounded-xl border border-indigo-500/30">
          <h3 class="text-xl font-semibold text-white mb-4">Course Duration</h3>
          <p class="text-3xl font-bold text-indigo-400 mb-2">{course.data.duration}</p>
          <p class="text-gray-400">Intensive immersive training with flexible scheduling</p>
        </div>

        <div class="bg-gradient-to-br from-gray-900 to-gray-950 p-8 rounded-xl border border-indigo-500/30">
          <h3 class="text-xl font-semibold text-white mb-4">Hands-On Labs</h3>
          <p class="text-3xl font-bold text-indigo-400 mb-2">{course.data.handsOnPercentage}%+</p>
          <p class="text-gray-400">Majority of time spent on practical exercises</p>
        </div>

        <div class="bg-gradient-to-br from-gray-900 to-gray-950 p-8 rounded-xl border border-indigo-500/30">
          <h3 class="text-xl font-semibold text-white mb-4">Delivery Options</h3>
          <ul class="text-gray-400 space-y-2">
            {course.data.deliveryOptions.map((option) => (
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-indigo-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                {option}
              </li>
            ))}
          </ul>
        </div>

        <div class="bg-gradient-to-br from-gray-900 to-gray-950 p-8 rounded-xl border border-indigo-500/30">
          <h3 class="text-xl font-semibold text-white mb-4">What You Get</h3>
          <ul class="text-gray-400 space-y-2">
            {course.data.includes.slice(0, 4).map((item) => (
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-indigo-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                {item}
              </li>
            ))}
          </ul>
        </div>
      </div>

      <div class="mt-12 text-center">
        <p class="text-gray-400 mb-6 text-lg">
          All training can be customized to meet your organization's specific needs
        </p>
        <a href="#contact" class="inline-block bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold px-10 py-4 rounded-md hover:from-indigo-500 hover:to-purple-500 transition transform hover:scale-105">
          Request Training Information
        </a>
      </div>
    </div>
  </section>

  <Contact />
  <Footer />
</MainLayout>

<style>
  .bg-grid-pattern {
    background-image: 
      linear-gradient(to right, rgba(255, 255, 255, 0.1) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
    background-size: 40px 40px;
  }

  .prose {
    color: #e5e7eb;
  }

  .prose h2 {
    color: #ffffff;
    font-size: 2rem;
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    border-bottom: 2px solid #4f46e5;
    padding-bottom: 0.5rem;
  }

  .prose h3 {
    color: #ffffff;
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.8;
  }

  .prose ul {
    margin: 1.25rem 0;
    padding-left: 1.5rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }

  .prose strong {
    color: #ffffff;
    font-weight: 600;
  }
</style>

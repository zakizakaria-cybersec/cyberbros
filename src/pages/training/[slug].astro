---
import { getCollection } from "astro:content";
import type { GetStaticPaths } from "astro";
import MainLayout from "../../layouts/MainLayout.astro";
import Navigation from "../../components/Navigation.astro";
import Footer from "../../components/Footer.astro";
import Contact from "../../components/Contact.astro";

export const prerender = true;

export const getStaticPaths = (async () => {
  const trainingCourses = await getCollection("training");
  return trainingCourses.map((course) => ({
    params: { slug: course.slug },
    props: { course },
  }));
}) satisfies GetStaticPaths;

const { course } = Astro.props;
const { Content } = await course.render();

// Generate structured data for SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Course",
  "name": course.data.title,
  "description": course.data.description,
  "provider": {
    "@type": "Organization",
    "name": "CyberBros Security",
    "sameAs": "https://cyberbros.com"
  },
  "educationalLevel": course.data.level,
  "timeRequired": course.data.duration,
  "coursePrerequisites": course.data.prerequisites,
  "offers": {
    "@type": "Offer",
    "price": course.data.price,
    "priceCurrency": "MYR"
  }
};
---

<MainLayout 
  title={`${course.data.title} | CyberBros Malaysia`}
  description={course.data.description}
  keywords={course.data.keywords}
  canonicalURL={new URL(`/training/${course.slug}`, Astro.site).href}
>
  <!-- Structured Data -->
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(structuredData)} />

  <Navigation />
  
  <!-- Hero Section -->
  <section class="relative bg-black text-white py-24 px-6 overflow-hidden">
    <!-- Animated gradient background -->
    <div class="absolute inset-0 bg-gradient-to-br from-indigo-900/20 via-purple-900/20 to-pink-900/20 animate-gradient"></div>
    
    <!-- Grid overlay -->
    <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
    
    <!-- Glowing orbs -->
    <div class="absolute top-20 left-1/4 w-72 h-72 bg-indigo-500/30 rounded-full blur-3xl animate-pulse-slow"></div>
    <div class="absolute bottom-20 right-1/4 w-96 h-96 bg-purple-500/20 rounded-full blur-3xl animate-pulse-slower"></div>
    
    <!-- Floating particles -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="particle particle-1"></div>
      <div class="particle particle-2"></div>
      <div class="particle particle-3"></div>
      <div class="particle particle-4"></div>
      <div class="particle particle-5"></div>
    </div>
    
    <div class="relative max-w-5xl mx-auto z-10">
      <!-- Badge -->
      {course.data.badge && (
        <div class={`inline-flex items-center gap-2 px-4 py-2 mb-8 rounded-full border backdrop-blur-sm animate-fade-in-down ${
          course.data.category === 'trending' 
            ? 'bg-gradient-to-r from-yellow-500/10 to-orange-500/10 border-yellow-500/30' 
            : 'bg-gradient-to-r from-indigo-500/10 to-purple-500/10 border-indigo-500/30'
        }`}>
          {course.data.category === 'trending' && (
            <span class="relative flex h-2 w-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-yellow-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-yellow-500"></span>
            </span>
          )}
          <svg class={`w-4 h-4 ${course.data.category === 'trending' ? 'text-yellow-400' : 'text-indigo-400'}`} fill="currentColor" viewBox="0 0 20 20">
            {course.data.category === 'trending' ? (
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            ) : (
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
            )}
          </svg>
          <span class={`text-sm font-medium ${course.data.category === 'trending' ? 'text-yellow-300' : 'text-indigo-300'}`}>
            {course.data.badge}
          </span>
        </div>
      )}
      
      <h1 class="text-5xl md:text-7xl font-bold mb-8 animate-fade-in-up leading-tight">
        <span class="bg-gradient-to-r from-white via-indigo-200 to-purple-200 bg-clip-text text-transparent">
          {course.data.title}
        </span>
      </h1>
      
      <p class="text-xl md:text-2xl mb-6 text-gray-300 animate-fade-in max-w-3xl">
        {course.data.description.split('.')[0]}.
      </p>
      
      <p class="text-lg text-gray-400 mb-12 animate-fade-in-delay max-w-3xl">
        Master cutting-edge AI security techniques. Be among the elite professionals who can secure and exploit AI systems.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 mb-12 animate-fade-in-delay-2">
        <a href="#modules" class="group relative px-8 py-4 bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg font-semibold text-white overflow-hidden transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-indigo-500/50">
          <span class="relative z-10 flex items-center justify-center gap-2">
            Explore Curriculum
            <svg class="w-5 h-5 group-hover:translate-y-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 13l-7 7-7-7m14-8l-7 7-7-7"></path>
            </svg>
          </span>
          <div class="absolute inset-0 bg-gradient-to-r from-purple-600 to-pink-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </a>
        
        <a href="#contact" class="group px-8 py-4 bg-white/5 backdrop-blur-sm rounded-lg font-semibold text-white border border-white/10 hover:bg-white/10 hover:border-indigo-500/50 transition-all duration-300 hover:scale-105 hover:shadow-xl">
          Enquire Now
        </a>
      </div>

      <!-- Quick Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 animate-fade-in-delay-3">
        <div class="bg-black/40 backdrop-blur-md border border-indigo-500/30 rounded-lg p-4 text-center">
          <div class="text-3xl font-bold text-indigo-400 mb-1">{course.data.duration}</div>
          <div class="text-sm text-gray-400">Intensive Training</div>
        </div>
        <div class="bg-black/40 backdrop-blur-md border border-purple-500/30 rounded-lg p-4 text-center">
          <div class="text-3xl font-bold text-purple-400 mb-1">{course.data.handsOnPercentage}%</div>
          <div class="text-sm text-gray-400">Hands-On Labs</div>
        </div>
        <div class="bg-black/40 backdrop-blur-md border border-pink-500/30 rounded-lg p-4 text-center">
          <div class="text-3xl font-bold text-pink-400 mb-1">{course.data.modules.length}</div>
          <div class="text-sm text-gray-400">Core Modules</div>
        </div>
        <div class="bg-black/40 backdrop-blur-md border border-indigo-500/30 rounded-lg p-4 text-center">
          <div class="text-3xl font-bold text-indigo-400 mb-1">Elite</div>
          <div class="text-sm text-gray-400">{course.data.level}</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Learning Objectives -->
  <section class="py-24 px-6 bg-gradient-to-br from-gray-950 via-black to-gray-950">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 px-4 py-2 mb-6 rounded-full bg-gradient-to-r from-indigo-500/10 to-purple-500/10 border border-indigo-500/20 backdrop-blur-sm">
          <svg class="w-4 h-4 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="text-sm font-medium text-indigo-300">Learning Outcomes</span>
        </div>
        
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
          <span class="bg-gradient-to-r from-white via-indigo-200 to-purple-200 bg-clip-text text-transparent">
            Skills You'll Acquire
          </span>
        </h2>
        <p class="text-gray-300 text-lg max-w-3xl mx-auto">
          Transform into an AI security specialist with these elite capabilities
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6 max-w-5xl mx-auto">
        {course.data.objectives.map((objective, index) => (
          <div class="group relative bg-gradient-to-br from-gray-900/50 to-gray-950/50 backdrop-blur-sm p-6 rounded-xl border border-indigo-500/20 hover:border-indigo-500/50 transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-indigo-500/10">
            {/* Animated gradient background */}
            <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
            
            {/* Content */}
            <div class="relative flex gap-4">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-lg">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
              </div>
              <div class="flex-1">
                <p class="text-gray-200 leading-relaxed group-hover:text-white transition-colors">
                  {objective}
                </p>
              </div>
            </div>
            
            {/* Number indicator */}
            <div class="absolute top-3 right-3 text-indigo-500/20 font-bold text-4xl group-hover:text-indigo-500/30 transition-colors">
              {String(index + 1).padStart(2, '0')}
            </div>
          </div>
        ))}
      </div>
      
      {/* Certification badge */}
      <div class="mt-16 text-center">
        <div class="inline-block relative">
          <div class="absolute inset-0 bg-gradient-to-r from-indigo-600/20 to-purple-600/20 blur-2xl"></div>
          <div class="relative bg-gradient-to-r from-gray-900 to-gray-950 border border-indigo-500/30 rounded-2xl p-8">
            <div class="flex flex-col md:flex-row items-center gap-6">
              <div class="w-20 h-20 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-full flex items-center justify-center shadow-2xl">
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                </svg>
              </div>
              <div class="text-left">
                <h3 class="text-2xl font-bold text-white mb-2">Certification Included</h3>
                <p class="text-gray-300">
                  Earn a professional certificate validating your advanced AI security expertise
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Training Modules -->
  <section id="modules" class="relative py-24 px-6 bg-black overflow-hidden">
    <!-- Animated gradient background -->
    <div class="absolute inset-0 bg-gradient-to-br from-indigo-950/30 via-purple-950/20 to-black"></div>
    
    <!-- Grid overlay -->
    <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
    
    <!-- Glowing orbs -->
    <div class="absolute top-0 left-1/3 w-96 h-96 bg-indigo-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-1/3 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl"></div>
    
    <div class="relative max-w-6xl mx-auto z-10">
      <div class="text-center mb-16">
        <!-- Section badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 mb-6 rounded-full bg-gradient-to-r from-indigo-500/10 to-purple-500/10 border border-indigo-500/20 backdrop-blur-sm">
          <svg class="w-4 h-4 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
          <span class="text-sm font-medium text-indigo-300">Comprehensive Curriculum</span>
        </div>
        
        <h2 class="text-4xl md:text-5xl font-bold mb-4">
          <span class="bg-gradient-to-r from-white via-indigo-200 to-purple-200 bg-clip-text text-transparent">
            What You'll Master
          </span>
        </h2>
        <p class="text-gray-300 text-lg mb-3 max-w-3xl mx-auto">
          Dive deep into offensive and defensive AI security with hands-on modules
        </p>
        <p class="text-indigo-400 font-semibold max-w-3xl mx-auto">
          From self-hosted LLMs to advanced red teaming and exploitation techniques
        </p>
      </div>

      <div class="space-y-8">
        {course.data.modules.map((module, index) => (
          <div class="group relative bg-gradient-to-br from-gray-900/80 to-gray-950/80 backdrop-blur-sm rounded-2xl border border-indigo-500/30 hover:border-indigo-400/60 transition-all duration-500 overflow-hidden hover:scale-[1.02] hover:shadow-2xl hover:shadow-indigo-500/20">
            {/* Hover gradient effect */}
            <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            
            {/* Module content */}
            <div class="relative p-8">
              <div class="flex flex-col md:flex-row items-start gap-6">
                {/* Module number badge */}
                <div class="flex-shrink-0">
                  <div class="relative w-20 h-20 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-2xl flex items-center justify-center text-white font-bold text-2xl group-hover:scale-110 group-hover:rotate-3 transition-all duration-300 shadow-lg">
                    <span class="relative z-10">{String(index + 1).padStart(2, '0')}</span>
                    <div class="absolute inset-0 bg-gradient-to-br from-purple-600 to-pink-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-2xl"></div>
                  </div>
                </div>
                
                {/* Module details */}
                <div class="flex-1 space-y-4">
                  <div>
                    <h3 class="text-2xl md:text-3xl font-bold text-white mb-3 group-hover:text-indigo-300 transition-colors">
                      {module.title}
                    </h3>
                    <p class="text-gray-300 text-lg leading-relaxed">
                      {module.description}
                    </p>
                  </div>
                  
                  {/* Topics grid with icons */}
                  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 pt-2">
                    {module.topics.map((topic, topicIndex) => (
                      <div class="flex items-start gap-2 group/topic">
                        <div class="flex-shrink-0 mt-1">
                          <svg class="w-4 h-4 text-indigo-400 group-hover/topic:text-indigo-300 transition-colors" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                          </svg>
                        </div>
                        <span class="text-sm text-gray-400 group-hover/topic:text-gray-300 transition-colors leading-tight">
                          {topic}
                        </span>
                      </div>
                    ))}
                  </div>
                  
                  {/* Lab indicator for modules with labs */}
                  {module.topics.some(topic => topic.toLowerCase().includes('lab')) && (
                    <div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-emerald-600/20 to-teal-600/20 border border-emerald-500/30 rounded-full">
                      <svg class="w-4 h-4 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                      </svg>
                      <span class="text-emerald-300 text-sm font-semibold">Includes Hands-On Labs</span>
                    </div>
                  )}
                </div>
              </div>
            </div>
            
            {/* Progress indicator */}
            <div class="absolute bottom-0 left-0 w-full h-1 bg-gray-800">
              <div class="h-full bg-gradient-to-r from-indigo-600 to-purple-600 transition-all duration-500 group-hover:w-full" style={`width: ${((index + 1) / course.data.modules.length) * 20}%`}></div>
            </div>
          </div>
        ))}
      </div>
      
      {/* Call to action after modules */}
      <div class="mt-12 text-center">
        <div class="inline-block bg-gradient-to-r from-indigo-600/10 to-purple-600/10 border border-indigo-500/30 rounded-2xl p-8 backdrop-blur-sm">
          <h3 class="text-2xl font-bold text-white mb-3">Ready to Become an AI Security Expert?</h3>
          <p class="text-gray-300 mb-6 max-w-2xl mx-auto">
            Join the elite few who can secure AI systems in the most critical environments
          </p>
          <a href="#contact" class="inline-block bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold px-10 py-4 rounded-lg hover:from-indigo-500 hover:to-purple-500 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-indigo-500/50">
            Start Your Journey Today
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Who Should Attend -->
  <section class="py-24 px-6 bg-black">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 px-4 py-2 mb-6 rounded-full bg-gradient-to-r from-indigo-500/10 to-purple-500/10 border border-indigo-500/20 backdrop-blur-sm">
          <svg class="w-4 h-4 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <span class="text-sm font-medium text-indigo-300">Perfect For</span>
        </div>
        
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
          <span class="bg-gradient-to-r from-white via-indigo-200 to-purple-200 bg-clip-text text-transparent">
            Who Should Join
          </span>
        </h2>
        <p class="text-gray-300 text-lg max-w-3xl mx-auto">
          Designed for security professionals ready to master the next frontier
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
        {course.data.audience.map((person, index) => {
          const [title, ...descParts] = person.split(' - ');
          const description = descParts.join(' - ');
          
          const icons = [
            // Penetration Testers
            `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>`,
            // Security Researchers
            `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>`,
            // Threat Hunters
            `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>`,
            // AI/ML Engineers
            `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>`,
            // Security Architects
            `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>`,
            // Bug Bounty Hunters

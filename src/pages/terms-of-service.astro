  canonicalURL={new URL(Astro.url.pathname.replace(/\/$/, '') || '/', Astro.site).href}
>
  <Navigation />
  
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-b from-gray-950 via-gray-900 to-black pt-32 pb-16 px-6">
    <div class="max-w-4xl mx-auto text-center relative z-10">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Terms of Service</h1>
      <p class="text-gray-400">Last Updated: October 31, 2025</p>

---
import MainLayout from "../../layouts/MainLayout.astro";
import Navigation from "../../components/Navigation.astro";
import Footer from "../../components/Footer.astro";

const posts = [
  {
    title: "Fuzzing with Radamsa: A Practical Guide to Finding Vulnerabilities",
    description: "Learn how to use Radamsa, a powerful fuzzing tool, to discover security vulnerabilities in your applications through automated testing.",
    slug: "fuzzing-with-radamsa",
    publishDate: "2025-10-26",
    tags: ["fuzzing", "security-testing", "radamsa", "vulnerability-research"],
    readTime: "8 min read"
  }
];
---

<MainLayout title="Security Blog | CyberBros Security" description="Expert insights on cybersecurity, penetration testing, and security best practices.">
  <Navigation />
  
  <section class="bg-gray-900 min-h-screen py-20">
    <div class="max-w-7xl mx-auto px-6">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-6xl font-bold text-white mb-4">
          Security <span class="text-indigo-500">Insights</span>
        </h1>
        <p class="text-xl text-gray-400 max-w-2xl mx-auto">
          Expert knowledge on cybersecurity, penetration testing, and emerging threats
        </p>
      </div>

      <!-- Blog Posts Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map(post => (
          <article class="bg-gray-800/50 border border-gray-700 rounded-lg overflow-hidden hover:border-indigo-500 transition-all duration-300 hover:shadow-lg hover:shadow-indigo-500/20">
            <a href={`/blog/${post.slug}`} class="block">
              <div class="p-6">
                <div class="flex flex-wrap gap-2 mb-4">
                  {post.tags.map(tag => (
                    <span class="px-2 py-1 bg-indigo-600/20 text-indigo-400 text-xs rounded-full border border-indigo-600/30">
                      #{tag}
                    </span>
                  ))}
                </div>
                
                <h2 class="text-2xl font-bold text-white mb-3 hover:text-indigo-400 transition">
                  {post.title}
                </h2>
                
                <p class="text-gray-400 mb-4 line-clamp-3">
                  {post.description}
                </p>
                
                <div class="flex items-center justify-between text-sm text-gray-500">
                  <time datetime={post.publishDate}>
                    {new Date(post.publishDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                  </time>
                  <span>{post.readTime}</span>
                </div>
              </div>
              
              <div class="px-6 pb-6">
                <span class="inline-flex items-center gap-2 text-indigo-400 hover:text-indigo-300 transition">
                  Read more
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </span>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>

  <Footer />
</MainLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
